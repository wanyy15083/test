    <!--<dubbo:registry id="registry1" address="zookeeper://127.0.0.1:2181"/>-->
    <!--<dubbo:registry id="registry2" address="zookeeper://127.0.0.1:2181" default="false"/>-->

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>

